@model TPLOCAL1.Models.FormulaireModel

@{
}
<head>
    <title> Validation Formulaire</title>
    <link rel="stylesheet" href="/css/formulaire.css" />
</head>
<body>
    <header>
        <img src="/img/GroupeHN.png" class="image" alt="GroupeHN" />
         <h1 class="text-center">Page de validation</h1>
    </header>
     <nav>
        <ul>
            <li><a href="/">Accueil</a></li>
            <li><a href="/Home/index/ListeAvis">Liste avis</a></li>
        </ul>
    </nav>


<section>
    <p>Votre formulaire a bien été pris en compte</p>
<table>
        <thead>
        <th colspan="2">Informations personnelles</th></thead>
    <tr>
        <td><label ASP-for="nom" class="form-label">Nom</label></td>
        <td> @Model.nom </td>
    </tr>
    <tr>
        <td><label for="prenom">Prénom</label></td>
        <td> @Model.prenom </td>
    </tr>
    <tr>
        <td><label for="sexe" >Sexe</label></td>
        <td>
            @Model.sexe
        </td>
    </tr>
    <tr>
        <td>
            <label for="adresse">Adresse</label>
        </td>
        <td>@Model.adresse</td>
    </tr>
    <tr>
        <td>
            <label for="codeP">Code Postal</label>
        </td>
        <td>@Model.codeP</td>
    </tr>
    <tr>
        <td>
            <label for="ville">Ville</label>
        </td>
        <td>@Model.ville</td>
    </tr>
    <tr>
        <td>
            <label for="mail" pattern=" ">Adresse mail</label>
        </td>
        <td>
            @Model.mail
        </td>
    </tr>
</table>
<table>
        <thead>
        <th colspan="2">Informations formation suivie</th></thead>
    <tr>
        <td><label for="dateDeb">Date début de formation</label></td>
        <td>@Model.dateDeb.ToShortDateString() </td>
    </tr>
    <tr>
        <td><label for="typForm">Type de Formation</label></td>
        <td>
           @Model.typForm
        </td>
    </tr>

</table>
<table>
     <thead><th colspan="2">Avis sur la formation</th</thead>

    <tr>
        <td><label for="cobolForm">Formation COBOL</label></td>
        <td>@Model.cobolForm</td>
    </tr>
    <tr>
        <td><label for="objetForm">Formation Objet</label></td>
        <td>@Model.objetForm</td>
    </tr>
</table>
</section>
</body>